{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "camelcase": "error",
        "object-property-newline": 2,
        "eqeqeq": 2,
        "eol-last": 2,
        "no-trailing-spaces": 2,
        "space-infix-ops": 2
    }
}
